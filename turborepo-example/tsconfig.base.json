{
  "compilerOptions": {
    "lib": ["ES2021", "DOM"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "app/*": ["*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "pages/*": ["src/pages/*"],
      "assets/*": ["src/assets/*"],
      "boot/*": ["src/boot/*"],
      "vue$": ["node_modules/vue/dist/vue.runtime.esm-bundler.js"]
    },
    "allowJs": true,
    "module": "esnext",
  },
  "exclude": ["dist", ".quasar", "node_modules"]
}
